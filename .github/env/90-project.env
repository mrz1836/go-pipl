# ================================================================================================
# üìä COVERAGE CONFIGURATION OVERRIDES
# ================================================================================================

# Coverage Provider Selection (overrides 10-coverage.env default of "internal")
GO_COVERAGE_PROVIDER=codecov

# Codecov Configuration (overrides 10-coverage.env default of false)
CODECOV_TOKEN_REQUIRED=true

# Custom Coverage Exclusions (overrides 10-coverage.env default)
GO_COVERAGE_EXCLUDE_PATHS=test/,vendor/,testdata/,examples/,mocks/,docs/

# ================================================================================================
# üîí SECURITY CONFIGURATION OVERRIDES
# ================================================================================================

# Custom gitleaks configuration (ignore tokens, patterns, etc.)
GITLEAKS_CONFIG_FILE=.github/.gitleaks.toml
